<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@("@_neckbeard")">
    <meta name="twitter:title" content="Derby">
    <meta name="twitter:description" content="A free community tool for managing Pinewood Derby competitions">
    <meta name="twitter:creator" content="@("@_neckbeard")">

    <title>@ViewBag.Title - Derby v0.1</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Html.Partial("_Analytics")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Derby", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        @Html.Action("GetPacks", "Layout")
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">


                    <li>@Html.ActionLink("About", "about", "home")</li>
                    @Html.Partial("_LoginPartial")
                </ul>
                

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tim Meers</p>
        </footer>
    </div>   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
