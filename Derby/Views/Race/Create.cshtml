@using System.Collections
@model Derby.ViewModels.RaceViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Race</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.HiddenFor(model => model.CompetitionId)
        </div>


        <div class="form-group">
            <label class="control-label col-md-2" for="den">Den</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DenId, new SelectList(Model.Dens, "Id", "Name", ViewBag.DenId))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
