@model Derby.ViewModels.RaceViewModel

@{
    ViewBag.Title = "Generate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Generate Race Events</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>For Derby @Model.Competition.Title</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="alert alert-dismissable alert-warning">
            <p>Doing this creates all of the races and heats for the entire competition. Are you sure you have all of your Scouts registered?</p>
        
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Competition_Title">For Derby: </label>
            <div class="col-md-10">
                <h4>@Model.Competition.Title</h4>
                @Html.HiddenFor(model => model.CompetitionId)
                @Html.ValidationMessageFor(model => model.CompetitionId)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Generate" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Competition", "Details", "Competition", new { id = Model.Competition.Id }, new { @class = "btn btn-xs btn-default" })
</div>
