@model IEnumerable<Derby.Models.Pack>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-xs btn-success" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dens)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Scouts)
        </th>
        <th></th>
    </tr>

@foreach (var pack in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => pack.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => pack.Region)
        </td>
        <td>
            @pack.Dens.Count()
        </td>
        <td>
            @pack.Scouts.Count()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = pack.Id }, new { @class = "btn btn-xs btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id = pack.Id }, new { @class = "btn btn-xs btn-default" }) |
            @Html.ActionLink("Add Den", "Create", "Den", new { packId = pack.Id }, new { @class = "btn btn-xs btn-success" }) &nbsp; | &nbsp;
            @Html.ActionLink("Delete", "Delete", new { id = pack.Id }, new { @class = "btn btn-xs btn-danger" })
        </td>
    </tr>
}

</table>
