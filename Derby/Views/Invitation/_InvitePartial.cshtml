@model Derby.ViewModels.PackInvitationViewModel


@using (Html.BeginForm("Create", "Invitation"))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title"><i class="fa fa-envelope"></i>&nbsp; Send new invitation</h4>
    </div>
    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.InvitedEmail, new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.InvitedEmail)
                    @Html.ValidationMessageFor(model => model.InvitedEmail)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PackList, new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.PackId, new SelectList(Model.PackList, "Id", "Name", ViewBag.PackId))
                    @Html.ValidationMessageFor(model => model.PackList)
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>

}