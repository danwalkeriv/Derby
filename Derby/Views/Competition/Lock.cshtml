@model Derby.Models.Competition

@{
    ViewBag.Title = "Lock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lock</h2>

<h3>Are you sure you want to lock registration for this derby?</h3>
<div>
    <h4> &nbsp; &nbsp; Competition: <em> @Html.DisplayFor(model => model.Title)</em></h4>
    <br/>
    <div>
        <em>Locking the registration will make it so no additional scouts can be added to the Dens and their Heats.</em>
    </div>
    <hr />


    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Lock" class="btn btn-xs btn-warning" /> |
            @Html.ActionLink("No - Back to Competition", "Details", "Competition", new { id = Model.Id }, new { @class = "btn btn-xs btn-default" })
        </div>

    }
</div>
