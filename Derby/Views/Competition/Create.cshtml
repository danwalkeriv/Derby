@model Derby.Models.Competition

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Competition</h4>
        <hr />
        <div class="alert alert-dismissable alert-warning">
            <p>Creating your competition will also generate all of the races for the event. Adding your Dens and Competitors before creating the Competition will make the process smoother.</p>
        </div>

        @Html.ValidationSummary(true)
        @*@Html.HiddenFor(model => model.PackId)*@

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Location, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Location)
                @Html.ValidationMessageFor(model => model.Location)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RaceType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.RaceType, new SelectList(Enum.GetValues(typeof(Derby.Infrastructure.DerbyType)), 0))
                @Html.ValidationMessageFor(model => model.RaceType)
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.EventDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EventDate, new {@class = "date"})
                @Html.ValidationMessageFor(model => model.EventDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LaneCount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LaneCount)
                @Html.ValidationMessageFor(model => model.LaneCount)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
